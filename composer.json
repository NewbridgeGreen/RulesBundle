{
    "name": "newbridgegreen/rules-bundle",
    "type": "symfony-bundle",
    "description": "Rules engine for modifying your models based on rulesets",
    "keywords": ["rules", "engine"],
    "homepage": "http://github.com/NewbridgeGreen/RulesBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Jamie Sutherland",
            "email": "jamie@newbridgegreen.com",
            "homepage": "http://www.newbridgegreen.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.2",

        "doctrine/common": ">=2.3,<2.5-dev",
        "doctrine/mongodb-odm": "dev-master",
        "doctrine/mongodb-odm-bundle": "dev-master"
    },
    "require-dev": {
        "symfony/framework-bundle": "2.*",
        "symfony/symfony": "2.*",
        "symfony/monolog-bundle": "dev-master"
    },
    "autoload": {
        "psr-0": { "NewbridgeGreen\\RulesBundle": "" }
    },
    "minimum-stability": "dev",
    "target-dir": "NewbridgeGreen/RulesBundle"
}